{% extends 'baseform.html.twig' %}

{% block title %}LACVI - Connexion{% endblock %}

{% block body %}

<section class="w-full h-full flex flex-col flex-grow justify-center px-4 py-8 lg:gap-3 lg:py-8 lg:items-center">

    <form method="post" class="w-full h-fit flex flex-col items-center gap-12 px-6 py-8 rounded-sm bg-white lg:w-2/3 lg:px-16 lg:py-8 lg:shadow-box">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connectés en tant que {{ app.user.userIdentifier }} , <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h2 class="text-red lg:text-center">Se connecter</h2>

        <div class="w-full flex flex-col items-center gap-6 font-calibri">
            <div class="w-2/3 flex flex-col gap-2">
                <label for="username">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control px-4 py-2 shadow-inner rounded-sm bg-gray/10" autocomplete="email" required autofocus>
            </div>

            <div class="w-2/3 flex flex-col gap-2">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control px-4 py-2 shadow-inner rounded-sm bg-gray/10" autocomplete="current-password" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary w-fit h-fit px-6 py-3 rounded-sm bg-red text-white shadow-box cursor-pointer" type="submit">
            Se connecter
        </button>

        <div class="w-full flex flex-col items-center px-6 py-5 gap-3 border-t-2 border-gray lg:flex-row lg:justify-between">
            <p>Vous n'avez pas de compte ?</p>
            <a href="{{ path('app_register') }}" class="w-auto h-auto px-6 py-3 rounded-sm bg-white border-2 border-red text-red">S'inscrire</a>
        </div>
    </form>

</section>

{% endblock %}
